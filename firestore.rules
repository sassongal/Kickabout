rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // Helper Functions
    // ============================================
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper to get hub data safely
    function getHubData(hubId) {
      return get(/databases/$(database)/documents/hubs/$(hubId)).data;
    }

    // Robust hub admin check (manager/admin/creator)
    function isHubAdmin(hubId) {
      let hub = getHubData(hubId);
      return isAuthenticated() && (
        hub.createdBy == request.auth.uid ||
        (hub.roles != null &&
         request.auth.uid in hub.roles &&
         hub.roles[request.auth.uid] in ['admin', 'manager'])
      );
    }

    // Check if user is member (via get)
    function isHubMember(hubId) {
      let hub = getHubData(hubId);
      return isAuthenticated() && (
        (hub.memberIds != null && request.auth.uid in hub.memberIds) ||
        hub.createdBy == request.auth.uid // Safety: Creator is always a member
      );
    }

    // Check if user is moderator (via get)
    function isHubModerator(hubId) {
      let hub = getHubData(hubId);
      return isAuthenticated() && (
        hub.createdBy == request.auth.uid ||
        (hub.roles != null && request.auth.uid in hub.roles && hub.roles[request.auth.uid] in ['manager', 'moderator', 'admin'])
      );
    }

    // Check permission to create events
    function canCreateEvents(hubId) {
      let hub = getHubData(hubId);
      return isAuthenticated() && (
        hub.createdBy == request.auth.uid ||
        (hub.roles != null && request.auth.uid in hub.roles && hub.roles[request.auth.uid] in ['manager', 'moderator', 'admin']) ||
        (hub.permissions != null &&
         hub.permissions.canCreateEvents != null &&
         hub.permissions.canCreateEvents is list &&
         request.auth.uid in hub.permissions.canCreateEvents)
      );
    }

    // Check permission to create posts
    function canCreatePosts(hubId) {
      let hub = getHubData(hubId);
      return isAuthenticated() &&
        (request.auth.uid in hub.memberIds || hub.createdBy == request.auth.uid) && (
        hub.permissions == null ||
        hub.permissions.canCreatePosts == null ||
        !(hub.permissions.canCreatePosts is list) ||
        request.auth.uid in hub.permissions.canCreatePosts
      );
    }

    // ============================================
    // Schema Validation Functions
    // ============================================
    function isValidGame(game) {
      return game.keys().hasAll(['gameId', 'createdBy', 'hubId', 'gameDate', 'createdAt', 'updatedAt']) &&
        game.gameId is string &&
        game.createdBy is string &&
        game.hubId is string &&
        game.gameDate is timestamp &&
        game.createdAt is timestamp &&
        game.updatedAt is timestamp &&
        (!('teamCount' in game) || (game.teamCount is int && game.teamCount >= 2 && game.teamCount <= 6)) &&
        (!('teamAScore' in game) || (game.teamAScore is int && game.teamAScore >= 0)) &&
        (!('teamBScore' in game) || (game.teamBScore is int && game.teamBScore >= 0)) &&
        (!('aggregateWins' in game) || (game.aggregateWins is map)) &&
        (!('matches' in game) || (game.matches is list));
    }

    function isValidUser(user, existingUser) {
      return user.keys().hasAll(['uid', 'name', 'email', 'createdAt']) &&
        user.uid is string &&
        user.name is string &&
        user.email is string &&
        user.createdAt is timestamp &&
        (existingUser == null || user.uid == existingUser.uid) &&
        (existingUser == null || user.createdAt == existingUser.createdAt) &&
        (!('isManager' in user) || (existingUser != null && user.isManager == existingUser.isManager)) &&
        (!('currentRankScore' in user) ||
         (existingUser != null && user.currentRankScore == existingUser.currentRankScore) ||
         existingUser == null);
    }

    function isValidHubEvent(event) {
      return event.keys().hasAll(['eventId', 'hubId', 'createdBy', 'title', 'eventDate', 'createdAt', 'updatedAt']) &&
        event.eventId is string &&
        event.hubId is string &&
        event.createdBy is string &&
        event.title is string &&
        event.eventDate is timestamp &&
        event.createdAt is timestamp &&
        event.updatedAt is timestamp &&
        (!('teamCount' in event) || (event.teamCount is int && event.teamCount >= 2 && event.teamCount <= 6)) &&
        (!('maxParticipants' in event) || (event.maxParticipants is int && event.maxParticipants > 0)) &&
        (!('aggregateWins' in event) || (event.aggregateWins is map)) &&
        (!('matches' in event) || (event.matches is list));
    }

    // ============================================
    // Users Collection: /users/{userId}
    // ============================================
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();

      match /fcm_tokens/{tokenId} {
        allow read, write: if isOwner(userId);
      }
      match /following/{followingId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
      match /followers/{followerId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
      match /gamification/{doc} {
        allow read: if isAuthenticated();
        allow write: if false;
      }
    }

    // ============================================
    // Hubs Collection: /hubs/{hubId}
    // ============================================
    match /hubs/{hubId} {
      allow read: if isAuthenticated();

      allow create: if isAuthenticated() &&
        request.resource.data.keys().hasAll(['hubId', 'name', 'createdBy', 'createdAt']) &&
        request.resource.data.hubId == hubId &&
        request.resource.data.createdBy is string &&
        request.resource.data.createdAt is timestamp &&
        request.resource.data.memberIds is list;

      // Allow update by hub admins, but preserve critical immutable fields
      allow update: if isHubAdmin(hubId) &&
        request.resource.data.hubId == resource.data.hubId &&
        request.resource.data.createdBy == resource.data.createdBy &&
        request.resource.data.createdAt == resource.data.createdAt;
      
      allow delete: if isHubAdmin(hubId);

      // Join Requests
      match /requests/{userId} {
        allow read: if isAuthenticated() && isHubAdmin(hubId);
        allow create: if isAuthenticated() && isOwner(userId) &&
          request.resource.data.keys().hasAll(['userId', 'hubId', 'status', 'createdAt']) &&
          request.resource.data.userId == userId &&
          request.resource.data.hubId == hubId &&
          request.resource.data.status == 'pending' &&
          request.resource.data.createdAt is timestamp;
        allow update, delete: if isHubAdmin(hubId) &&
          request.resource.data.userId == resource.data.userId &&
          request.resource.data.hubId == resource.data.hubId;
      }

      // Feed Posts
      match /feed/posts/items/{postId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && canCreatePosts(hubId) &&
          request.resource.data.keys().hasAll(['postId', 'hubId', 'authorId', 'type', 'createdAt']) &&
          request.resource.data.postId == postId &&
          request.resource.data.hubId == hubId &&
          request.resource.data.authorId == request.auth.uid &&
          request.resource.data.createdAt is timestamp &&
          (!('text' in request.resource.data) ||
           request.resource.data.text is string &&
           request.resource.data.text.size() > 0);
        allow update, delete: if isHubAdmin(hubId) &&
          request.resource.data.postId == resource.data.postId &&
          request.resource.data.hubId == resource.data.hubId &&
          request.resource.data.authorId == resource.data.authorId &&
          request.resource.data.createdAt == resource.data.createdAt;

        match /comments/{commentId} {
          allow read: if isAuthenticated();
          allow create: if isAuthenticated() && isHubMember(hubId) &&
            request.resource.data.keys().hasAll(['commentId', 'postId', 'hubId', 'authorId', 'text', 'createdAt']) &&
            request.resource.data.commentId == commentId &&
            request.resource.data.postId == postId &&
            request.resource.data.hubId == hubId &&
            request.resource.data.authorId == request.auth.uid &&
            request.resource.data.createdAt is timestamp;
          allow update, delete: if isHubAdmin(hubId) &&
            request.resource.data.commentId == resource.data.commentId &&
            request.resource.data.postId == resource.data.postId &&
            request.resource.data.hubId == resource.data.hubId &&
            request.resource.data.authorId == resource.data.authorId &&
            request.resource.data.createdAt == resource.data.createdAt;
        }
      }

      // Chat (legacy)
      match /chat/{messageId} {
        allow read: if isAuthenticated() && isHubMember(hubId);
        allow create: if isAuthenticated() && isHubMember(hubId) &&
          request.resource.data.keys().hasAll(['hubId', 'authorId', 'text', 'createdAt']) &&
          request.resource.data.hubId == hubId &&
          request.resource.data.authorId == request.auth.uid &&
          request.resource.data.createdAt is timestamp;
        allow update, delete: if isHubAdmin(hubId);
      }

      // Hub chat messages
      match /chatMessages/{messageId} {
        allow read: if isHubMember(hubId);
        allow create: if isHubMember(hubId) &&
          request.resource.data.authorId == request.auth.uid &&
          request.resource.data.keys().hasAll(['messageId', 'hubId', 'authorId', 'text', 'createdAt']) &&
          request.resource.data.messageId == messageId &&
          request.resource.data.hubId == hubId &&
          request.resource.data.createdAt is timestamp;
        allow update, delete: if isHubAdmin(hubId) &&
          request.resource.data.messageId == resource.data.messageId &&
          request.resource.data.hubId == resource.data.hubId &&
          request.resource.data.authorId == resource.data.authorId &&
          request.resource.data.createdAt == resource.data.createdAt;
      }

      // Hub Events
      match /events/{eventId} {
        allow read: if isAuthenticated();
        allow create: if isHubAdmin(hubId) &&
          isValidHubEvent(request.resource.data) &&
          request.resource.data.eventId == eventId &&
          request.resource.data.hubId == hubId;
        allow update, delete: if isHubAdmin(hubId) &&
          isValidHubEvent(request.resource.data) &&
          request.resource.data.eventId == resource.data.eventId &&
          request.resource.data.hubId == resource.data.hubId &&
          request.resource.data.createdBy == resource.data.createdBy;

        // Event-level games (manual logging)
        match /games/{gameId} {
          allow read: if isAuthenticated();
          allow write: if isHubAdmin(hubId);
        }
      }

      // Fallback for other direct subcollections under hub
      match /{collection}/{docId} {
        allow read: if isAuthenticated();
        allow write, update, delete: if isHubAdmin(hubId);
      }
    }

    // ============================================
    // Games Collection: /games/{gameId}
    // ============================================
    match /games/{gameId} {
      allow read: if isAuthenticated();

      allow create: if isHubModerator(request.resource.data.hubId) &&
        isValidGame(request.resource.data) &&
        request.resource.data.gameId == gameId &&
        request.resource.data.createdBy == request.auth.uid;

      allow update: if isHubModerator(resource.data.hubId) &&
        isValidGame(request.resource.data) &&
        request.resource.data.gameId == resource.data.gameId &&
        request.resource.data.createdBy == resource.data.createdBy &&
        request.resource.data.hubId == resource.data.hubId &&
        (!('status' in request.resource.data) ||
         request.resource.data.status != 'completed' ||
         isHubAdmin(resource.data.hubId)) &&
        (!('teamAScore' in request.resource.data) || isHubAdmin(resource.data.hubId)) &&
        (!('teamBScore' in request.resource.data) || isHubAdmin(resource.data.hubId)) &&
        (!('mvpPlayerId' in request.resource.data) || isHubAdmin(resource.data.hubId)) &&
        (!('aggregateWins' in request.resource.data) || isHubAdmin(resource.data.hubId)) &&
        (!('matches' in request.resource.data) || isHubAdmin(resource.data.hubId));

      allow delete: if isHubModerator(resource.data.hubId);

      // Signups
      match /signups/{userId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isAuthenticated() && (
          isOwner(userId) ||
          isHubAdmin(get(/databases/$(database)/documents/games/$(gameId)).data.hubId)
        ) &&
          request.resource.data.playerId == userId;
      }

      // Game chat
      match /chatMessages/{messageId} {
        allow read: if isAuthenticated() &&
          exists(/databases/$(database)/documents/games/$(gameId)) &&
          exists(/databases/$(database)/documents/games/$(gameId)/signups/$(request.auth.uid));
        allow create: if isAuthenticated() &&
          exists(/databases/$(database)/documents/games/$(gameId)) &&
          exists(/databases/$(database)/documents/games/$(gameId)/signups/$(request.auth.uid)) &&
          request.resource.data.senderId == request.auth.uid &&
          request.resource.data.keys().hasAll(['gameId', 'senderId', 'text', 'createdAt']) &&
          request.resource.data.gameId == gameId &&
          request.resource.data.createdAt is timestamp;
        allow update: if false;
        allow delete: if isAuthenticated() && (
          resource.data.senderId == request.auth.uid ||
          isHubModerator(get(/databases/$(database)/documents/games/$(gameId)).data.hubId)
        );
      }

      // Teams
      match /teams/{teamId} {
        allow read: if isAuthenticated();
        allow write: if isHubModerator(get(/databases/$(database)/documents/games/$(gameId)).data.hubId);
      }

      // Game Events (stats)
      match /events/{eventId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if isHubModerator(get(/databases/$(database)/documents/games/$(gameId)).data.hubId);
      }
    }

    // ============================================
    // Ratings
    // ============================================
    match /ratings/{userId}/history/{ratingId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        request.resource.data.keys().hasAll(['ratingId', 'gameId', 'playerId', 'submittedBy', 'submittedAt']) &&
        request.resource.data.ratingId == ratingId &&
        request.resource.data.playerId == userId &&
        request.resource.data.submittedBy == request.auth.uid &&
        request.resource.data.submittedAt is timestamp;
      allow update, delete: if false;
    }

    // ============================================
    // Notifications
    // ============================================
    match /notifications/{userId}/items/{notificationId} {
      allow read: if isAuthenticated() && userId == request.auth.uid;
      allow create: if isAuthenticated() &&
        userId == request.auth.uid &&
        request.resource.data.keys().hasAll(['userId', 'type', 'title', 'body', 'read', 'createdAt']) &&
        request.resource.data.userId == userId &&
        request.resource.data.read == false &&
        request.resource.data.createdAt is timestamp;
      allow update: if isAuthenticated() && userId == request.auth.uid &&
        request.resource.data.userId == resource.data.userId &&
        request.resource.data.type == resource.data.type &&
        request.resource.data.createdAt == resource.data.createdAt;
      allow delete: if isAuthenticated() && userId == request.auth.uid;
    }

    // ============================================
    // Private Messages
    // ============================================
    match /private_messages/{conversationId} {
      allow read: if isAuthenticated() &&
        request.auth.uid in resource.data.participantIds;
      allow create: if isAuthenticated() &&
        request.auth.uid in request.resource.data.participantIds &&
        request.resource.data.keys().hasAll(['participantIds']) &&
        request.resource.data.participantIds is list;
      allow update: if isAuthenticated() &&
        request.auth.uid in resource.data.participantIds;
      allow delete: if isAuthenticated() &&
        request.auth.uid in resource.data.participantIds;

      match /messages/{messageId} {
        allow read: if isAuthenticated() &&
          request.auth.uid in get(/databases/$(database)/documents/private_messages/$(conversationId)).data.participantIds;
        allow create: if isAuthenticated() &&
          request.resource.data.senderId == request.auth.uid &&
          request.auth.uid in get(/databases/$(database)/documents/private_messages/$(conversationId)).data.participantIds &&
          request.resource.data.keys().hasAll(['messageId', 'senderId', 'text', 'createdAt']) &&
          request.resource.data.messageId == messageId &&
          request.resource.data.createdAt is timestamp;
        allow update, delete: if false;
      }
    }

    // ============================================
    // Venues Collection: /venues/{venueId}
    // ============================================
    match /venues/{venueId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() &&
        request.resource.data.name != null &&
        request.resource.data.location is latlng &&
        request.resource.data.createdAt is timestamp &&
        request.resource.data.updatedAt is timestamp &&
        (request.resource.data.hubId == null || isHubModerator(request.resource.data.hubId));
      allow update: if isHubModerator(resource.data.hubId) &&
        request.resource.data.venueId == resource.data.venueId &&
        (resource.data.hubId == null || request.resource.data.hubId == resource.data.hubId);
      allow delete: if resource.data.hubId == null || isHubModerator(resource.data.hubId);
    }

    // ============================================
    // Regional Feed (read-only)
    // ============================================
    match /feedPosts/{postId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
  }
}
