rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ============================================
    // Helper Functions
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // פונקציית עזר לבדיקת הרשאת מנהל בהאב
    // בודק אם המשתמש הוא admin (roles[uid] == 'admin') או manager או היוצר
    function isHubAdmin(hubId) {
      return isAuthenticated() && 
        (
          // For reads, check resource.data
          (resource != null && resource.data.createdBy == request.auth.uid) ||
          (resource != null && resource.data.roles[request.auth.uid] in ['admin', 'manager']) ||
          // For writes, check request.resource.data
          (request.resource != null && request.resource.data.createdBy == request.auth.uid) ||
          (request.resource != null && request.resource.data.roles[request.auth.uid] in ['admin', 'manager']) ||
          // Fallback: check hub document directly
          (exists(/databases/$(database)/documents/hubs/$(hubId)) &&
           (get(/databases/$(database)/documents/hubs/$(hubId)).data.createdBy == request.auth.uid ||
            get(/databases/$(database)/documents/hubs/$(hubId)).data.roles[request.auth.uid] in ['admin', 'manager']))
        );
    }
    
    // פונקציה לבדיקת חברות בהאב
    function isHubMember(hubId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/hubs/$(hubId)) &&
        request.auth.uid in get(/databases/$(database)/documents/hubs/$(hubId)).data.memberIds;
    }
    
    // Helper to check if user is hub manager (kept for backward compatibility)
    function isHubManager(hubId) {
      return isHubAdmin(hubId);
    }
    
    // פונקציה לבדיקת הרשאת "מנהל" (יוצר, מנהל, או מודרטור)
    function isHubModerator(hubId) {
      let hubData = get(/databases/$(database)/documents/hubs/$(hubId)).data;
      return isAuthenticated() && 
        (
          hubData.createdBy == request.auth.uid ||
          (hubData.roles != null && hubData.roles[request.auth.uid] in ['manager', 'moderator', 'admin'])
        );
    }
    
    // ============================================
    // Users Collection: /users/{userId}
    // ============================================
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();
      
      // Only the user themselves can create/update/delete their own profile
      allow create: if isAuthenticated() && isOwner(userId) &&
        // Validate required fields
        request.resource.data.keys().hasAll(['uid', 'name', 'email', 'createdAt']) &&
        request.resource.data.uid == userId &&
        request.resource.data.createdAt is timestamp;
      
      allow update: if isAuthenticated() && isOwner(userId) &&
        // Prevent changing uid
        request.resource.data.uid == resource.data.uid &&
        // Prevent changing createdAt
        request.resource.data.createdAt == resource.data.createdAt;
      
      allow delete: if isAuthenticated() && isOwner(userId);
      
      // FCM Tokens: /users/{userId}/fcm_tokens/{tokenId}
      match /fcm_tokens/{tokenId} {
        allow read, write: if isOwner(userId);
      }
      
      // Following/Followers: /users/{userId}/following/{followingId}
      match /following/{followingId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
      
      match /followers/{followerId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
      
      // Gamification: /users/{userId}/gamification/{doc}
      match /gamification/{doc} {
        // Anyone authenticated can read gamification data
        allow read: if isAuthenticated();
        // Only server-side updates (Cloud Functions)
        allow write: if false;
      }
    }

    // ============================================
    // Hubs Collection: /hubs/{hubId}
    // ============================================
    match /hubs/{hubId} {
      // כל אחד יכול לקרוא נתוני האב (כדי לראות במפה/רשימות)
      allow read: if true;
      
      // כל משתמש מחובר יכול ליצור האב חדש
      allow create: if request.auth != null &&
        // Validate required fields
        request.resource.data.keys().hasAll(['hubId', 'name', 'createdBy', 'createdAt']) &&
        request.resource.data.hubId == hubId &&
        request.resource.data.createdBy == request.auth.uid &&
        request.resource.data.createdAt is timestamp &&
        // Validate memberIds array (creator must be in memberIds)
        request.resource.data.memberIds is list &&
        request.auth.uid in request.resource.data.memberIds;
      
      // רק מנהל (כולל מודרטור) יכול לעדכן או למחוק
      allow update, delete: if isHubModerator(hubId) &&
        // Prevent changing hubId or createdBy
        request.resource.data.hubId == resource.data.hubId &&
        request.resource.data.createdBy == resource.data.createdBy;
      
      // Feed Posts: /hubs/{hubId}/feed/posts/items/{postId}
      match /feed/posts/items/{postId} {
        // Only hub members can read posts
        allow read: if isAuthenticated() && isHubMember(hubId);
        
        // Only hub members can create posts
        allow create: if isAuthenticated() && isHubMember(hubId) &&
          // Validate required fields
          request.resource.data.keys().hasAll(['postId', 'hubId', 'authorId', 'type', 'createdAt']) &&
          request.resource.data.postId == postId &&
          request.resource.data.hubId == hubId &&
          request.resource.data.authorId == request.auth.uid &&
          request.resource.data.createdAt is timestamp;
        
        // Only post author or moderators can update/delete
        allow update: if isAuthenticated() && isHubMember(hubId) && (
          resource.data.authorId == request.auth.uid ||
          isHubModerator(hubId)
        ) &&
        // Prevent changing immutable fields
        request.resource.data.postId == resource.data.postId &&
        request.resource.data.hubId == resource.data.hubId &&
        request.resource.data.authorId == resource.data.authorId &&
        request.resource.data.createdAt == resource.data.createdAt;
        
        allow delete: if isAuthenticated() && isHubMember(hubId) && (
          resource.data.authorId == request.auth.uid ||
          isHubModerator(hubId)
        );
        
        // Comments: /hubs/{hubId}/feed/posts/items/{postId}/comments/{commentId}
        match /comments/{commentId} {
          allow read: if isAuthenticated() && isHubMember(hubId);
          
          allow create: if isAuthenticated() && isHubMember(hubId) &&
            // Validate required fields
            request.resource.data.keys().hasAll(['commentId', 'postId', 'hubId', 'authorId', 'text', 'createdAt']) &&
            request.resource.data.commentId == commentId &&
            request.resource.data.postId == postId &&
            request.resource.data.hubId == hubId &&
            request.resource.data.authorId == request.auth.uid &&
            request.resource.data.createdAt is timestamp;
          
          allow update: if isAuthenticated() && isHubMember(hubId) && (
            resource.data.authorId == request.auth.uid ||
            isHubModerator(hubId)
          ) &&
          // Prevent changing immutable fields
          request.resource.data.commentId == resource.data.commentId &&
          request.resource.data.postId == resource.data.postId &&
          request.resource.data.hubId == resource.data.hubId &&
          request.resource.data.authorId == resource.data.authorId &&
          request.resource.data.createdAt == resource.data.createdAt;
          
          allow delete: if isAuthenticated() && isHubMember(hubId) && (
            resource.data.authorId == request.auth.uid ||
            isHubModerator(hubId)
          );
        }
      }
      
      // Chat Messages: /hubs/{hubId}/chat/{messageId} (legacy path)
      match /chat/{messageId} {
        allow read: if isAuthenticated() && isHubMember(hubId);
        
        allow create: if isAuthenticated() && isHubMember(hubId) &&
          // Validate required fields
          request.resource.data.keys().hasAll(['hubId', 'authorId', 'text', 'createdAt']) &&
          request.resource.data.hubId == hubId &&
          request.resource.data.authorId == request.auth.uid &&
          request.resource.data.createdAt is timestamp;
        
        allow update, delete: if isAuthenticated() && isHubMember(hubId) && (
          resource.data.authorId == request.auth.uid ||
          isHubAdmin(hubId)
        );
      }
      
      // Hub Chat Messages: /hubs/{hubId}/chatMessages/{messageId}
      match /chatMessages/{messageId} {
        // רק חברי ההאב יכולים לקרוא
        allow read: if isHubMember(hubId);
        
        // רק חברי ההאב יכולים לכתוב (ורק בשם עצמם)
        allow create: if isHubMember(hubId) && 
          request.resource.data.authorId == request.auth.uid &&
          // Validate required fields
          request.resource.data.keys().hasAll(['hubId', 'authorId', 'text', 'createdAt']) &&
          request.resource.data.hubId == hubId &&
          request.resource.data.createdAt is timestamp;
        
        // Only sender or moderator can update/delete
        allow update: if isHubMember(hubId) && (
          resource.data.authorId == request.auth.uid ||
          isHubModerator(hubId)
        ) &&
        // Prevent changing immutable fields
        request.resource.data.messageId == resource.data.messageId &&
        request.resource.data.hubId == resource.data.hubId &&
        request.resource.data.authorId == resource.data.authorId &&
        request.resource.data.createdAt == resource.data.createdAt;
        
        allow delete: if isHubMember(hubId) && (
          resource.data.authorId == request.auth.uid ||
          isHubModerator(hubId)
        );
      }
      
      // Hub Events: /hubs/{hubId}/events/{eventId}
      match /events/{eventId} {
        // Only hub members can read events
        allow read: if isAuthenticated() && isHubMember(hubId);
        
        // Only hub managers can create events
        allow create: if isAuthenticated() && isHubManager(hubId) &&
          // Validate required fields
          request.resource.data.keys().hasAll(['eventId', 'hubId', 'createdBy', 'title', 'eventDate', 'createdAt', 'updatedAt']) &&
          request.resource.data.eventId == eventId &&
          request.resource.data.hubId == hubId &&
          request.resource.data.createdBy == request.auth.uid &&
          request.resource.data.eventDate is timestamp &&
          request.resource.data.createdAt is timestamp &&
          request.resource.data.updatedAt is timestamp;
        
        // Only hub managers can update/delete events
        allow update, delete: if isAuthenticated() && isHubManager(hubId) &&
          // Prevent changing eventId, hubId, or createdBy
          request.resource.data.eventId == resource.data.eventId &&
          request.resource.data.hubId == resource.data.hubId &&
          request.resource.data.createdBy == resource.data.createdBy;
      }
    }

    // ============================================
    // Games Collection: /games/{gameId}
    // ============================================
    match /games/{gameId} {
      // כל אחד יכול לקרוא פרטי משחק (כדי להירשם)
      allow read: if true;
      
      // רק מנהל (מודרטור ומעלה) יכול ליצור משחק
      allow create: if isHubModerator(request.resource.data.hubId) &&
        // Validate required fields
        request.resource.data.keys().hasAll(['gameId', 'createdBy', 'hubId', 'gameDate', 'createdAt', 'updatedAt']) &&
        request.resource.data.gameId == gameId &&
        request.resource.data.createdBy == request.auth.uid &&
        request.resource.data.gameDate is timestamp &&
        request.resource.data.createdAt is timestamp &&
        request.resource.data.updatedAt is timestamp;
      
      // רק מנהל יכול לעדכן (תוצאה, סטטוס) או למחוק
      allow update, delete: if isHubModerator(resource.data.hubId) &&
        // Prevent changing gameId, createdBy, or hubId
        request.resource.data.gameId == resource.data.gameId &&
        request.resource.data.createdBy == resource.data.createdBy &&
        request.resource.data.hubId == resource.data.hubId &&
        // updatedAt must be updated
        request.resource.data.updatedAt is timestamp;
      
      // Signups: /games/{gameId}/signups/{userId}
      match /signups/{userId} {
        allow read: if isAuthenticated();
        
        // כל משתמש יכול לרשום/למחוק רק את עצמו
        allow create, delete: if isOwner(userId) &&
          // Validate required fields for create
          (request.method == 'delete' || (
            request.resource.data.keys().hasAll(['playerId', 'signedUpAt']) &&
            request.resource.data.playerId == userId &&
            request.resource.data.signedUpAt is timestamp
          ));
        
        // מנהל יכול לעדכן הרשמה (למשל לאשר)
        allow update: if isOwner(userId) || isHubModerator(get(/databases/$(database)/documents/games/$(gameId)).data.hubId);
      }
      
      // Game Chat Messages: /games/{gameId}/chatMessages/{messageId}
      match /chatMessages/{messageId} {
        // רק מי שרשום למשחק יכול לקרוא
        // Also verify game exists
        allow read: if isAuthenticated() &&
          exists(/databases/$(database)/documents/games/$(gameId)) &&
          exists(/databases/$(database)/documents/games/$(gameId)/signups/$(request.auth.uid));
        
        // רק מי שרשום למשחק יכול לכתוב
        allow create: if isAuthenticated() &&
          exists(/databases/$(database)/documents/games/$(gameId)) &&
          exists(/databases/$(database)/documents/games/$(gameId)/signups/$(request.auth.uid)) &&
          request.resource.data.senderId == request.auth.uid &&
          // Validate required fields
          request.resource.data.keys().hasAll(['gameId', 'senderId', 'text', 'createdAt']) &&
          request.resource.data.gameId == gameId &&
          request.resource.data.createdAt is timestamp;
        
        // Only sender or moderator can update/delete
        // Messages are effectively immutable (only delete allowed)
        allow update: if false; // Messages should not be updated
        allow delete: if isAuthenticated() && (
          resource.data.senderId == request.auth.uid ||
          isHubModerator(get(/databases/$(database)/documents/games/$(gameId)).data.hubId)
        );
      }
      
      // Teams: /games/{gameId}/teams/{teamId}
      match /teams/{teamId} {
        allow read: if isAuthenticated();
        
        // רק מנהל יכול לכתוב/למחוק קבוצות
        allow write: if isHubModerator(get(/databases/$(database)/documents/games/$(gameId)).data.hubId);
      }
      
      // Game Events: /games/{gameId}/events/{eventId} (סטטיסטיקות - שערים, בישולים)
      match /events/{eventId} {
        allow read: if isAuthenticated();
        
        // רק מנהל יכול לתעד אירועי משחק
        allow create, update, delete: if isHubModerator(get(/databases/$(database)/documents/games/$(gameId)).data.hubId);
      }
    }

    // ============================================
    // Ratings Collection: /ratings/{userId}/history/{ratingId}
    // ============================================
    match /ratings/{userId}/history/{ratingId} {
      // Anyone authenticated can read ratings
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create ratings
      allow create: if isAuthenticated() &&
        // Validate required fields
        request.resource.data.keys().hasAll(['ratingId', 'gameId', 'playerId', 'submittedBy', 'submittedAt']) &&
        request.resource.data.ratingId == ratingId &&
        request.resource.data.playerId == userId &&
        request.resource.data.submittedBy == request.auth.uid &&
        request.resource.data.submittedAt is timestamp;
      
      // Ratings are immutable (only server can update/delete)
      allow update, delete: if false;
    }

    // ============================================
    // Notifications Collection: /notifications/{userId}/items/{notificationId}
    // ============================================
    match /notifications/{userId}/items/{notificationId} {
      // Users can only read their own notifications
      allow read: if isAuthenticated() && userId == request.auth.uid;
      
      // Allow clients to create notifications for themselves (Cloud Functions also create them)
      // This is needed because push_notification_integration_service creates notifications
      allow create: if isAuthenticated() && 
        userId == request.auth.uid &&
        // Validate required fields
        request.resource.data.keys().hasAll(['userId', 'type', 'title', 'body', 'read', 'createdAt']) &&
        request.resource.data.userId == userId &&
        request.resource.data.read == false &&
        request.resource.data.createdAt is timestamp;
      
      // Users can only update/delete their own notifications
      allow update: if isAuthenticated() && userId == request.auth.uid &&
        // Prevent changing userId, type, createdAt
        request.resource.data.userId == resource.data.userId &&
        request.resource.data.type == resource.data.type &&
        request.resource.data.createdAt == resource.data.createdAt;
      
      allow delete: if isAuthenticated() && userId == request.auth.uid;
    }

    // ============================================
    // Private Messages Collection: /private_messages/{conversationId}
    // ============================================
    match /private_messages/{conversationId} {
      // Only participants can read
      allow read: if isAuthenticated() && 
        request.auth.uid in resource.data.participantIds;
      
      // Only participants can create conversations
      allow create: if isAuthenticated() && 
        request.auth.uid in request.resource.data.participantIds &&
        // Validate required fields
        request.resource.data.keys().hasAll(['participantIds']) &&
        request.resource.data.participantIds is list;
      
      // Only participants can update
      allow update: if isAuthenticated() && 
        request.auth.uid in resource.data.participantIds;
      
      // Only participants can delete
      allow delete: if isAuthenticated() && 
        request.auth.uid in resource.data.participantIds;
      
      // Messages: /private_messages/{conversationId}/messages/{messageId}
      match /messages/{messageId} {
        // Only participants can read
        allow read: if isAuthenticated() && 
          request.auth.uid in get(/databases/$(database)/documents/private_messages/$(conversationId)).data.participantIds;
        
        // Only participants can create messages
        allow create: if isAuthenticated() && 
          request.resource.data.senderId == request.auth.uid &&
          request.auth.uid in get(/databases/$(database)/documents/private_messages/$(conversationId)).data.participantIds &&
          // Validate required fields
          request.resource.data.keys().hasAll(['messageId', 'senderId', 'text', 'createdAt']) &&
          request.resource.data.messageId == messageId &&
          request.resource.data.createdAt is timestamp;
        
        // Messages are immutable
        allow update, delete: if false;
      }
    }

    // ============================================
    // Venues Collection: /venues/{venueId}
    // ============================================
    match /venues/{venueId} {
      allow read: if isAuthenticated();
      
      // מאפשר לכל משתמש מחובר ליצור מגרש (עבור "יצירה ידנית")
      // ומוודא שרק מנהל יכול לקשר מגרש ישירות להאב שלו
      allow create: if isAuthenticated() &&
        // Validate required fields
        request.resource.data.name != null &&
        request.resource.data.location is latlng &&
        request.resource.data.createdAt is timestamp &&
        request.resource.data.updatedAt is timestamp &&
        // If hubId is provided, user must be hub moderator
        (request.resource.data.hubId == null || isHubModerator(request.resource.data.hubId));
      
      // רק מנהל יכול לעדכן/למחוק מגרש
      allow update: if isHubModerator(resource.data.hubId) &&
        // Prevent changing venueId or hubId
        request.resource.data.venueId == resource.data.venueId &&
        (resource.data.hubId == null || request.resource.data.hubId == resource.data.hubId);
      
      allow delete: if resource.data.hubId == null || isHubModerator(resource.data.hubId);
    }
    
    // ============================================
    // Feed Posts (פיד אזורי אוטומטי)
    // ============================================
    match /feedPosts/{postId} {
      // כל משתמש מחובר יכול לקרוא את הפיד
      allow read: if isAuthenticated();
      
      // רק השרת (פונקציות ענן) יכול ליצור פוסטים אוטומטיים
      allow write: if false;
    }
  }
}
